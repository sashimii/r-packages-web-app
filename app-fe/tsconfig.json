{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "jsx": "preserve",
    "allowJs": true,
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "types": [
      "jest",
      "core-js"
    ]
  },
  "include": [
    "./src/**/*",
    "./src/*.tsx",
    "./src/**/*.tsx",
    "./src/**/**/*.tsx"
  ]
}